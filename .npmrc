# Ensure packages are hoisted to root for workspace resolution
# This is needed for vitest to find jsdom
hoist=true

# Allow legacy peer dependency resolution for npm commands (used by semantic-release in CI).
# react-simple-maps@3 declares peer deps for React 16-18 but works fine with React 19.
# The library is abandoned (last commit Jul 2023) and won't be updated.
# This setting only affects npm â€” Bun (our package manager) ignores .npmrc.
legacy-peer-deps=true
