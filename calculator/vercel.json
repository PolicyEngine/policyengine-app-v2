{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "cd .. && bun install --frozen-lockfile",
  "buildCommand": "cd .. && bun run design-system:build && bun run build:calculator --workspace=policyengine-app-v2",
  "outputDirectory": "../app/dist",
  "rewrites": [{ "source": "/(.*)", "destination": "/calculator.html" }],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
