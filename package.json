{
  "name": "policyengine-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "app"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "typecheck": "turbo run typecheck",
    "design-system:build": "npm run build --workspace=@policyengine/design-system",
    "design-system:export-python": "npm run export-python --workspace=@policyengine/design-system",
    "calculator:dev": "npm run dev --workspace=@policyengine/calculator",
    "website:dev": "npm run dev --workspace=@policyengine/website"
  },
  "devDependencies": {
    "turbo": "^2.5.3"
  },
  "packageManager": "npm@10.8.0",
  "engines": {
    "node": ">=22.0.0"
  }
}
