{
  "name": "policyengine-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "app"
  ],
  "scripts": {
    "dev": "bun run design-system:build && bun run dev --filter=policyengine-app-v2",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "typecheck": "turbo run typecheck",
    "design-system:build": "bun run build --filter=@policyengine/design-system",
    "calculator:dev": "bun run dev --filter=@policyengine/calculator",
    "website:dev": "bun run dev --filter=@policyengine/website"
  },
  "devDependencies": {
    "jsdom": "^26.1.0",
    "turbo": "^2.5.3"
  },
  "packageManager": "bun@1.2.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@policyengine/design-system": "^0.1.0",
    "@vercel/analytics": "^1.6.1",
    "concurrently": "^9.2.1"
  }
}
